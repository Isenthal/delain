{% extends 'index.twig' %}
{% block contenu %}
    <div class="groupdiv">
        {% for faq in FAQ %}

            <div class="titre">{{ faq.tfaq_libelle }}</div>
            <div id="accordion{{ faq.tfaq_cod }}" role="tablist">
                {% for detail in faq.detail %}
                    <div class="card">
                        <div class="card-header" role="tab" id="heading{{ detail.faq_cod }}">
                            <h5 class="mb-0">
                                <a data-toggle="collapse" href="#collapse{{ detail.faq_cod }}" aria-expanded="true"
                                   aria-controls="collapse{{ detail.faq_cod }}">
                                    {{ detail.faq_question|raw }}
                                </a>
                            </h5>
                        </div>

                    </div>
                    <div id="collapse{{ detail.faq_cod }}" class="collapse" role="tabpanel" aria-labelledby="heading{{ detail.faq_cod }}" data-parent="#accordion{{ faq.tfaq_cod }}">
                        <div class="card-body">
                            {{ detail.faq_reponse|raw }}
                        </div>
                    </div>
                {% endfor %}
            </div>


        {% endfor %}
    </div>
{% endblock %}
{% block postscripts %}


{% endblock %}
