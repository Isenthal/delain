             {%  set total4_poids = 0 %}
             {% for p in PERSOS  %}
                 {% if p.perso_pnj == 2  %}
                     {%  set total4 = total4 + PERSO_QUETES[p.perso_cod][r].count  %}
                     {%  set total4_poids = total4_poids + PERSO_QUETES[p.perso_cod][r].poids  %}
